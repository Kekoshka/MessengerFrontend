<Page x:Class="MessengerWebAPIFrontend.Pages.Authorization.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MessengerWebAPIFrontend.Pages.Authorization"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" Margin="300,0,300,0" MaxWidth="350">
            <Label Content="Имя"/>
            <TextBox x:Name="Name" Height="30"/>
            <Label Content="Логин"/>
            <TextBox x:Name="Login" Height="30"/>
            <Label Content="Пароль"/>
            <PasswordBox x:Name="Password" Height="30"/>
            <Button Click="Auth" Content="Войти" Height="30" Margin="0,40,0,0"/>
            <Button Click="OpenRegistration" Content="Зарегистрироваться" Background="Transparent" BorderThickness="0" Margin="0,10,0,0"/>
        </StackPanel>

    </Grid>
</Page>
